{# Front Page #}
{% extends "base.twig" %}

{% block content %}
    <div class="row">
        <div class="col-md-4 page">
            <h1>{{about_us.title}}</h1>
            <img src="{{about_us.thumbnail.src}}">
            <p>{{about_us.content}}</p>
        </div>
        <div class="col-md-4 page ">
            <h1>{{our_service.title}}</h1>
            <p>{{our_service.content}}</p>
        </div>
        <div class="col-md-4">
            <h1>Latest news</h1>
            {% for post in posts %}
                <div class="single_content">
                    <h3>{{ post.title }}</h3>
                    <p>{{ post.get_content }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}